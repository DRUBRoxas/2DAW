  "version": "2.0.0",
  "tasks": [
    {
      "label": "Abrir en Brave",
      "command": "explorer",
      "windows": {
        "command": "C:/Program Files (x86)/BraveSoftware/Brave-Browser/Application/brave.exe"
      },
      "args": [
        "http://localhost:8080/${workspaceRootFolderName}/${relativeFile}"
      ],
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

    {
        "label": "Abrir en Chrome",
        "command": "explorer",
        "windows": {
          "command": "C:/Program Files (x86)/Google/Chrome/Application/Chrome.exe"
        },
        "args": [
          "http://localhost:8080/${workspaceRootFolderName}/${relativeFile}"
        ],
        "presentation": {
          "reveal": "never"
        },
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        }
    }
  ]
}
